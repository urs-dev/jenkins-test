#!/usr/bin/env groovy
echo 'Job build by: ${username}'
echo ">>> ${env.BUILD_ID} :: ${env.JOB_NAME} :: ${env.JENKINS_URL}"
pipeline {
    agent any
    options {
        skipDefaultCheckout true
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}

echo "Job finished: ${env.BUILD_ID} on ${env.JENKINS_URL}"
