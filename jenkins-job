        stage('xxxx') {
            steps {
                echo 'Building..'
                // copy Job-1
                //  def src = new File('c:/temp/src.zip')
                //  def dst = new File('c:/temp/dst.zip')
                //  dst << src.bytes
            }
        }
        stage('deploy') {
            steps {
                echo 'deploy to run environent ...'
            }
        }
        stage('run tasks') {
            steps {
                echo 'run tasks ...'
            }
        }
    }
}

echo "------------------------------------------------------------------"
echo "Job finished: ${env.BUILD_ID} on ${env.JENKINS_URL}"
