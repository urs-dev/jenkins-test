#!/usr/bin/env groovy

def myVar = "Hallo Otto"

pipeline {
    agent any
    options {
        skipDefaultCheckout true
    }
    stages {
        stage("first") {
            steps {
                    //sh "echo ${myVar}"  // Variable innerhalb von string
                    echo myVar
                    echo "STAGE: first, STEP-1"
                    echo "--- calling powershell script ---"
                    PowerShell(". '.\\job-1.ps1'") 
            }
        }
    }
}
