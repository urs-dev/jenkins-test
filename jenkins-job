#!/usr/bin/env groovy
echo 'Job build by: ${env.USERNAME}'
echo '------------------------------------------------'
echo ">>> ${env.BUILD_ID} :: ${env.JOB_NAME} :: ${env.JENKINS_URL}"

echo '------------------------------------------------'

pipeline {
   environment {
     FOO = "foo"
   }

   agent none
   stages {
       stage("first") {
           sh "echo ${FOO}"
       }
   }
}

echo "------------------------------------------------------------------"
echo "Job finished: ${env.BUILD_ID} on ${env.JENKINS_URL}"
