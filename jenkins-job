#!/usr/bin/env groovy
echo 'Job build by: ${username}'
echo ">>> ${env.BUILD_ID} :: ${env.JOB_NAME} :: ${env.JENKINS_URL}"
pipeline {
    agent any
    options {
        skipDefaultCheckout true
    }

    stages {
        stage('xxxx') {
            steps {
                echo 'Building..'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploy to run environent ...'
            }
        }
        stage('run tasks') {
            steps {
                echo 'run tasks ...'
            }
        }
    }
}

echo "------------------------------------------------------------------"
echo "Job finished: ${env.BUILD_ID} on ${env.JENKINS_URL}"
